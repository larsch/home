# Global properties
command=/usr/lib/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=none

[disks]
command=~/bin/blocks/disks
interval=5

[volume]
label=VOL
#label=â™ª
label=ðŸ”Š
instance=Master
#instance=PCM

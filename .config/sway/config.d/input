# keyboard
input type:keyboard {
	xkb_options ctrl:nocaps
	xkb_layout us_custom
	repeat_delay 300
	repeat_rate 20
}

# mouse
input type:pointer {
	accel_profile flat
	pointer_accel 0.1
}

# touchpad
input 2:7:SynPS/2_Synaptics_TouchPad {
	dwt enabled
	tap enabled
	natural_scroll enabled
	middle_emulation enabled
	accel_profile flat
	pointer_accel 1.0
}


input * xkb_numlock enabled

# Settings
set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term footclient
set $altterm kitty

set $ws_shell 1
set $ws_browser 2
set $ws_code 3
set $ws_chat 4
set $ws_music 5
set $ws_docs 6
set $ws_notes 7

# keyboard
input type:keyboard {
	xkb_options ctrl:nocaps
	xkb_layout us_custom
	repeat_delay 300
	repeat_rate 20
}

# touchpad
input 2:7:SynPS/2_Synaptics_TouchPad {
	dwt enabled
	tap enabled
	natural_scroll enabled
	middle_emulation enabled
	accel_profile flat
	pointer_accel 1.0
}

# trackpad
input 2:10:TPPS/2_Elan_TrackPoint {
	accel_profile flat
}

